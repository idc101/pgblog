<div class="container">
  <div class="row">
    <header>
      <h1><a href="/">Professional Geek</a></h1>
      <p>Notes on programming from me to myself (and the world)</p>
    </header>
  </div>
  <div class="row">
    <div class="col-md-8">
      <% for post in posts %>
        <div class="post">
          <h2><a href="/posts/<%= post.url %>"><%= post.title %></a></h2>
          <p>Posted on <%= post.date %>
            <% if !post.tags.nil? %>
              - Tagged with 
              <% for tag in post.tags %>
                |<a href="/tags/<%= tag %>"><%= tag %></a>| 
              <% end %>
            <% end %>
            - <a href="/edit/<%= post.url %>">Edit</a>
          </p>
          <p><%= markdown(post.text) %></p>
        </div>
      <% end %>
      <% if defined?(start) %>
        <p>
          <a href="/?start=<%= [start - 4, 0].max %>">Newer</a>....
          <a href="/?start=<%= start + 4 %>">Older</a>
        </p>
      <% end %>
    </div>
    <div class="col-md-4">
      <nav>
        <% if login? %>
          <p>Welcome <%= session[:email] %>!</p>
          <a href="/auth/logout" title="Sign-out">Sign-out</a>
        <% else %>
          <a id="browserid" href="#" title="Sign-in with Persona">
            <img src="/images/sign_in_blue.png" alt="Sign-in with Persona"/>
          </a>
        <% end %>
        <p>
          <a href="/new">Add new post</a>
        </p>
        <p>
        </p>
      </nav>
    </div>
  </div>
</div>
