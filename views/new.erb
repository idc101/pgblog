<div class="container">
  <div class="row">
    <header>
      <h1>Add New Post</h1>
    </header>
  </div>
  <div class="row">
    <div class="col-md-10">
      <form action="/new" method="post" role="form">
        <div class="form-group">
          <label for="title">Title:</label>
          <input class="form-control" type="text" name="title" id="title" value="<%= post['title'] if defined?(post) %>">
        </div>
        <div class="form-group">
          <label for="Url">Url:</label>
          <input class="form-control" type="text" name="url" id="url" value="<%= post['url'] if defined?(post) %>">
        </div>
        <div class="form-group">
          <label for="date">Date:</label>
          <input class="form-control" type="text" name="date" id="date" value="<%= post['date'] if defined?(post) %>">
        </div>
        <div class="form-group">
          <label for="tags">Tags:</label>
          <input class="form-control" type="text" name="tags" id="tags" value="<%= post['tags'] if defined?(post) %>">
        </div>
        <div class="form-group">
          <label for="text">Content:</label>
          <textarea class="form-control" name="text" id="text" rows="15"><%= post['text'] if defined?(post) %></textarea>
        </div>
        <button type="submit" class="btn btn-default">Post</button>
      </form>
      <br>
      <p id="preview"></p>
    </div>
  </div>
</div>
